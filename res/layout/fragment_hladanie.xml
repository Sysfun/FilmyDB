<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.filmydb.MainActivity$PlaceholderFragment"
    android:orientation="vertical" >"

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hladanie" />
    
    <FrameLayout >
        
    	<LinearLayout 
    	    android:orientation="horizontal" 
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content" >
        	
    	    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/sk_nazov" />
    	    
    	    <EditText android:id="@+id/sk_search"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
    	    
    	</LinearLayout>
    	
    	<LinearLayout 
    	    android:orientation="horizontal" 
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content" >
        	
    	    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/ori_nazov" />
    	    
    	    <EditText android:id="@+id/ori_search"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
    	    
    	</LinearLayout>
    	
    	<LinearLayout 
    	    android:orientation="horizontal" 
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content" >
        	
    	    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/herec" />
    	    
    	    <EditText android:id="@+id/herec_search"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
    	    
    	</LinearLayout>
    	
    </FrameLayout>

</LinearLayout>
